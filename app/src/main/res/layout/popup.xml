<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popup_element"
    android:background="#FFFC94" >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter Task"
        android:gravity="top|left"
        android:id="@+id/userinput"
        android:background="@null"/>

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userinput"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/userinput"
        android:layout_marginBottom="25dp"
        android:id="@+id/save_btn" />

    <Button
        android:text="Set Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/cancel_btn"
        android:layout_alignBottom="@+id/userinput"
        android:layout_marginBottom="25dp"
        android:id="@+id/date_btn"
        android:layout_toRightOf="@+id/save_btn" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/userinput"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@+id/userinput"
        android:layout_marginBottom="25dp"
        android:id="@+id/cancel_btn" />

</RelativeLayout>